
.wrapper
  .left-content
    .user-content
      .user-content__box
        = current_user.name
        %ul.user-content__box__icon
          %li
            = link_to new_group_path do
              = fa_icon 'pencil-square-o', class: 'icon'
          %li
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'       
    .groups
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            %p.group__name 
              = group.name
            %p.group__message 
              = group.show_last_message
  .right-content
    .top-content
      .top-content__left-box
        %h2.team-name   
          = @group.name
        %ul.member-list
          %li Memberï¼š
          %li 
            - @group.users.each do |user|
              = user.name
      = link_to edit_group_path(@group) do
        .top-content__edit
          Edit
    .messages
      - @messages.each do |message|
        .message{"data-id": message.id}
          .message__info
            %p.message__info__user 
              = message.user.name
            %p.message__info__data 
              = message.created_at.strftime("%Y/%m/%d %H:%M")
          .message__text
            - if message.text.present?
              %p.message__content 
                = message.text 
            = image_tag message.image.url class: "message__image" if message.image.present?
    .form
      = form_for [@group,@message] do |f|
        .message-box  
          .input-box
            = f.text_field :text,class: "text-message",placeholder: "type a message"
            = f.label :image, class: "form-image" do
              %i.fa.fa-image
              = f.file_field :image
          = f.submit "Send",class: "submit-box" 


